<form action="/user" method="post">

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    Nom d'utilisateur:</br>
    <input type="text" name="name"></br>
    Email</br>
    <input type="text" name="email"></input></br>
    Password</br>
